{% extends 'base.html.twig' %}

{% block title %}PengolinCoin blog: search{% endblock %}

{% block body %}
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('{{ asset('img/banner-4.png') }}');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>PengolinCoin Blog</h1>
                        <span class="subheading">News & info</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row pb-5">
            <div class="col-lg-8 col-md-10 mx-auto">
                <h2>Search for a post</h2>
                <div class="form-group">
                    {{ form_start(searchForm) }}
                        {{ form_row(searchForm.title, {'label': 'Search is on the post title', 'id': 'search-titre', 'attr': {'placeholder': 'Enter a keyword', 'class': 'form-control'}})
                        }}
                        <p>
                            <button class="btn btn-success mt-3 py-2 px-3">Search</button>
                            <button class="btn btn-secondary mt-3 py-2 px-3" type="reset">Reset</button>
                        </p>
                    {{ form_end(searchForm) }}
                </div>


                    <div id="result-search" class="mt-5">
                        {% if pagination | length == 0 %}
                            <h5>No result for your search <i class="fas fa-sad-tear"></i></h5>
                        {% else %}
                            <h5 class="mt-3">Results for your search: {{ pagination.getTotalItemCount }}</h5>

                            {% for post in pagination %}
                                <div class="mt-3 py-3 px-3" style="font-size: 0.85rem;">
                                    <a class="text-decoration-none text-dark" href="{{ path('post_show', {'slug': post.slug}) }}">
                                        <h5 class="fw-bold text-dark"><i class="fas fa-arrow-circle-right"></i> {{ post.title }}</h5>
                                    </a>
                                    <div class="pl-4">
                                        <span class="badge bg-info p-2 text-white rounded">Posted on {{ post.createdAt | date('Y/m/d') }}</span>
                                        <span class="badge bg-warning text-dark p-2 rounded">{{ post.category }}</span>
                                    </div>
                                </div>
                            {% endfor %}

                            <div class="pagination justify-content-center mt-5">
                                {{ knp_pagination_render(pagination) }}
                            </div>

                        {% endif %}
                    </div>

            </div>
        </div>
        <hr>
    </div>

{% endblock %}
