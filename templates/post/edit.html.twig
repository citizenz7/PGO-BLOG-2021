{% extends 'base.html.twig' %}

{% block title %}Edit Post{% endblock %}

{% block body %}    <!-- Page Header -->
    <!-- Page Header -->
    {{ include('_header.html.twig', {'title': 'News & info', 'image': 'img/banner-4.png'}) }}

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row pb-5">
            <div class="col-lg-8 col-md-10 mx-auto">
                {% if is_granted('ROLE_ADMIN') %}
                    <h1>Edit Post</h1>
                        {{ include('post/_form.html.twig', {'button_label': 'Update'}) }}
                {% else %}
                    <h2 class="alert alert-danger p-5 text-center">
                        <i class="fas fa-exclamation-circle fa-2x"></i><br>
                        You can't access to this page!
                    </h2>
                {% endif %}
            </div>
        </div>
        <hr>
    </div>
{% endblock %}
