{% extends 'base.html.twig' %}

{% block title %}Edit Post{% endblock %}

{% block body %}    <!-- Page Header -->
    <header class="masthead" style="background-image: url('{{ asset('img/banner-4.png') }}');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>PengolinCoin Blog</h1>
                        <span class="subheading">News & info</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row pb-5">
            <div class="col-lg-8 col-md-10 mx-auto">
                {% if is_granted('ROLE_ADMIN') %}
                    <h1>Edit Post</h1>
                        {{ include('post/_form.html.twig', {'button_label': 'Update'}) }}
                {% else %}
                    <h2 class="alert alert-danger p-5 text-center">
                        <i class="fas fa-exclamation-circle fa-2x"></i><br>
                        You can't access to this page!
                    </h2>
                {% endif %}
            </div>
        </div>
        <hr>
    </div>
{% endblock %}
